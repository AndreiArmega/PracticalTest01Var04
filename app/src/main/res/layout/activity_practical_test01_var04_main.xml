<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01Var04MainActivity">

    <Button
        android:id="@+id/navigate_to_secondary_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="NAVIGATE TO SECONDARY ACTIVITY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="16dp">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1" />

        <EditText
            android:id="@+id/top_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:saveEnabled="false"
            android:hint="Enter text for the top field"
            android:inputType="text" />

        <CheckBox android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
             />
        <EditText
            android:id="@+id/bottom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:saveEnabled="false"
            android:hint="Enter text for the bottom field"
            android:inputType="text" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="DISPLAY INFORMATION" />

        <TextView
            android:id="@+id/down_left"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"

            android:textSize="24sp"
            android:saveEnabled="false"/>

    </LinearLayout>

</RelativeLayout>